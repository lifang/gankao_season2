<div style="width: 200px; height: 32px; margin: 0 auto;" id="text_body"></div>
<script type="text/javascript">
  //获取access token
  var accessToken = window.location.hash.substring(1);
  $.ajax({
    async:true,
    type: "POST",
    url: "/logins/add_watch_weibo.json",
    dataType: "json",
    data : {
      access_token:accessToken
    },
    success: function(data){
      $("#text_body").html(data.data);
      setTimeout(function(){window.close();}, 3000);
    }
  });
</script>
