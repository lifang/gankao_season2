<div class="AD_text">
  <%ads= Advert.ip_advert(request.headers["HTTP_X_REAL_IP"]) %>
  <% unless ads.blank? %>
  <marquee direction="left" scrollamount="2">
    <% ads.each do |ad| %>
      <%= ad.content.html_safe %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%end %>
    </marquee>
  <% end %>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    setInterval(function(){
      AutoScroll(".AD_scrollDiv")
    },3000)
  });
</script>
