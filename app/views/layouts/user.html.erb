  <head>
    <title><%= @title.nil? ? "个人中心-赶考网" : @title %></title>
    <%= stylesheet_link_tag    "users.css" %>
    <%= javascript_include_tag "application.js" %>
    <%= javascript_include_tag "users.js" %>
