  <body>
    <div class="wrap">
      <div class="head">
        <% category_id = params[:category].nil? ? 2 : params[:category] %>
        <div class="user_info">你好：<a href="#" onclick="javascript:window.location.href='/users/<%= cookies[:user_id] %>'" class="red"><%= cookies[:user_name] %>
            <% if is_trial?(category_id)%>
              <%  order = Order.first(:conditions=>"user_id = #{cookies[:user_id]} and types = #{Order::TYPES[:TRIAL_SEVEN]} and status=#{Order::STATUS[:NOMAL]} and category_id = #{category_id}")
              day_end=((order.end_time - Time.now.to_datetime)/1.day).to_i%>
              <% if day_end>=1%>
                <%="(试用剩#{day_end}天)"%>
              <%  elsif day_end==0 %>
                <%= "(试用即将到期)" %>
              <% end %>
            <%  elsif is_nomal?(category_id) %>
              <%= "(试用结束)" %>
            <% end %></a>|<a href="/">首页</a>|<a href="/logins/logout">退出</a></div>
        <div class="logo"><a href="/"><img src="/assets/logo_user.png" /></a></div>
      </div>
      <% category_id = params[:category].nil? ? 2 : params[:category] %>
      <div class="main">
        <div class="main_box border_radius">
          <div class="left">
            <%= yield %>
          </div>
          <div class="right">
            <div class="tab_project">
              <ul>
                <li><a href="/users/<%=cookies[:user_id] %>?category=<%= category_id %>" <% if request.parameters["action"]=="show" %> class="hover" <% end %>><img src="/assets/icon_1.png" />个人信息</a></li>
                <li><a href="/users/<%=cookies[:user_id] %>/info?category=<%= category_id %>" <% if request.parameters["action"]=="info" %> class="hover" <% end %>><img src="/assets/icon_2.png" />消 息</a></li>
                <li><a href="/users/<%=cookies[:user_id] %>/record?category=<%= category_id %>" <% if request.parameters["action"]=="record" %> class="hover" <% end %>><img src="/assets/icon_3.png" />消费记录</a></li>
              </ul>
            </div>
          </div>
          <div class="side_ying"></div>
        </div>
      </div>
      <div class="foot">
